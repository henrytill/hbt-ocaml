(executable
 (name gen_html))

(subdir
 data/html/run
 (dynamic_include ../generate/dune.inc))

(subdir
 data/html/generate
 (rule
  (deps
   (glob_files ../*.html))
  (action
   (with-stdout-to
    dune.inc
    (run ../../../gen_html.exe)))))

