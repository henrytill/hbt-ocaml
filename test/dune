(cram
 (deps %{bin:hbt})
 (package hbt))

(mdx
 (deps
  (package hbt-core))
 (package hbt-core)
 (libraries unix))

(test
 (name collection_test)
 (modules collection_test)
 (package hbt-core)
 (libraries alcotest hbt-core uri))

(executable
 (name gen_html)
 (modules gen_html test_filter))

(subdir
 data/html/run
 (dynamic_include ../generate/dune.inc))

(subdir
 data/html/generate
 (rule
  (deps
   (glob_files ../*.html)
   ../../../issues)
  (action
   (with-stdout-to
    dune.inc
    (run ../../../gen_html.exe)))))

